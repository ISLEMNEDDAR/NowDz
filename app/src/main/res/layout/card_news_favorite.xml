<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:cardCornerRadius="15sp"
android:id="@+id/card_favorite">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:layout_width="@dimen/zero_dim"
                    android:layout_height="match_parent"
                    android:layout_weight="7" android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/site_logo"
                            android:layout_width="64dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/cad2_news_titre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="@dimen/zero_dim"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                <ImageView
                        android:id="@+id/image_card2"
                        android:layout_width="100dp"
                        android:layout_height="81dp"
                        android:textAlignment="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginEnd="18.5dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginStart="18.5dp" android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:weightSum="12">
            <TextView
                    android:id="@+id/cadr1_date"
                    android:layout_width="@dimen/zero_dim"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"

                    android:layout_gravity="center"
                    android:textSize="12sp"/>
            <RelativeLayout
                    android:layout_width="@dimen/zero_dim"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_gravity="center">
                <ImageView
                        android:id="@+id/card2_menu"
                        android:layout_width="21dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/menu_black" android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" android:layout_marginRight="13dp"
                        android:layout_marginEnd="13dp"
                />
                <ImageView
                        android:id="@+id/favoris_card"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_saved"
                        android:layout_toStartOf="@+id/card2_menu" android:layout_marginRight="4dp"
                        android:layout_marginEnd="4dp" android:layout_toLeftOf="@+id/card2_menu"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>